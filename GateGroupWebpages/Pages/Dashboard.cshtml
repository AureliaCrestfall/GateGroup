@page
@using gategourmetLibrary.Models
@model GateGroupWebpages.Pages.DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-3">
        <div>
            <h1 class="h3 mb-1">My dashboard</h1>
            <p class="text-muted mb-0">Overview of your orders grouped by status.</p>
        </div>

        <a class="btn btn-primary" asp-page="/NewOrder">
            + Create new order
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header fw-semibold">
            Orders
        </div>

        <div class="card-body">

            <!-- Filter row -->
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">

                <form method="get" class="d-flex flex-wrap align-items-end gap-2 mb-0">
                    <div>
                        <label class="form-label mb-1" for="statusFilter">Status</label>

                        <select asp-for="statusFilter"
                                asp-items="Model.StatusOptions"
                                class="form-select form-select-sm"
                                id="statusFilter">
                        </select>
                    </div>

                    <button type="submit" class="btn btn-sm btn-primary">
                        Apply
                    </button>

                    <a asp-page="/Dashboard" class="btn btn-sm btn-outline-secondary">
                        Clear
                    </a>
                </form>

                @if (Model.Orders != null && Model.Orders.Any())
                {
                    <div class="text-muted small">
                        Showing <strong>@Model.Orders.Count()</strong> order(s)
                    </div>
                }
            </div>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <!-- Mobile cards -->
                <div class="d-block d-md-none">
                    <div class="d-grid gap-2">
                        @foreach (Order order in Model.Orders)
                        {
                            <div class="card">
                                <div class="card-body">

                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div>
                                            <div class="text-muted small">Order</div>
                                            <div class="fw-semibold">#@order.ID</div>
                                        </div>

                                        <div class="text-end">
                                            <div class="text-muted small">Status</div>
                                            <div>
                                                <span class="badge @GetStatusBadge(order.Status)">
                                                    @GetStatusText(order.Status)
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="my-3" />

                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="text-muted small">Made date</div>
                                            <div class="fw-semibold">@order.OrderMade.ToString("dd-MM-yyyy")</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="text-muted small">Made time</div>
                                            <div class="fw-semibold">@order.OrderMade.ToString("HH:mm")</div>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <a asp-page="/OrderDetails"
                                           asp-route-orderId="@order.ID"
                                           class="btn btn-outline-primary">
                                            More info
                                        </a>

                                        <!-- NO JS: go to confirmation page -->
                                        <a asp-page="/OrderDeleteConfirm"
                                           asp-route-id="@order.ID"
                                           class="btn btn-outline-danger">
                                            Delete
                                        </a>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Desktop table -->
                <div class="d-none d-md-block">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order</th>
                                    <th>Status</th>
                                    <th>Made date</th>
                                    <th>Made time</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Order order in Model.Orders)
                                {
                                    <tr>
                                        <td class="fw-semibold">#@order.ID</td>

                                        <td>
                                            <span class="badge @GetStatusBadge(order.Status)">
                                                @GetStatusText(order.Status)
                                            </span>
                                        </td>

                                        <td>@order.OrderMade.ToString("dd-MM-yyyy")</td>
                                        <td>@order.OrderMade.ToString("HH:mm")</td>

                                        <td class="text-end">
                                            <a asp-page="/OrderDetails"
                                               asp-route-orderId="@order.ID"
                                               class="btn btn-sm btn-outline-primary me-2">
                                                More info
                                            </a>

                                            <!-- NO JS: go to confirmation page -->
                                            <a asp-page="/OrderDeleteConfirm"
                                               asp-route-id="@order.ID"
                                               class="btn btn-sm btn-outline-danger">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    No orders found for the selected status. Try another status or create a new order.
                </div>
            }

        </div>
    </div>
</div>

@functions
{
    private static string GetStatusText(OrderStatus status)
    {
        if (status == OrderStatus.Created) return "Created";
        if (status == OrderStatus.InProgress) return "In progress";
        if (status == OrderStatus.Completed) return "Completed";
        if (status == OrderStatus.Cancelled) return "Cancelled";
        return "Unknown";
    }

    private static string GetStatusBadge(OrderStatus status)
    {
        if (status == OrderStatus.Created) return "bg-secondary";
        if (status == OrderStatus.InProgress) return "bg-warning text-dark";
        if (status == OrderStatus.Completed) return "bg-success";
        if (status == OrderStatus.Cancelled) return "bg-danger";
        return "bg-secondary";
    }
}
