<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GateGroupWebpages</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GateGroupWebpages.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Contact.css" />
    <link rel="stylesheet" href="~/css/Neworder.css" />
    <link rel="stylesheet" href="~/css/Admindashboard.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">GateGourmet</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex" id="mainNavbar">

                    <!-- Left side -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Contact">Contact</a>
                        </li>

                        @if (Context.Session.GetString("IsLoggedIn") == "true")
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Dashboard">Dashboard</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-sm-center">
                        @if (Context.Session.GetString("IsLoggedIn") == "true")
                        {
                            <li class="nav-item">
                                <span class="nav-link text-muted">
                                    Hello, @Context.Session.GetString("username")
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Login">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - GateGroupWebpages -
            <a href="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
