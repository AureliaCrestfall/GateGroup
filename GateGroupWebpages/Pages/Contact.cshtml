@page
@model GateGroupWebpages.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<section class="py-5 bg-light">
    <div class="container">

        <!-- Header -->
        <div class="row justify-content-center mb-4">
            <div class="col-12 col-lg-8 text-center">
                <h1 class="fw-semibold mb-2">Contact us</h1>
                <p class="text-muted mb-0">
                    If you have questions about orders, production planning or system access,
                    our support team is ready to help.
                </p>
            </div>
        </div>

        <!-- Contact card -->
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">

                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-4 p-md-5">

                        <div class="mb-4 text-center">
                            <h2 class="h5 fw-semibold mb-1">
                                Gate Gourmet Support
                            </h2>
                            <p class="text-muted mb-0">
                                Official contact information
                            </p>
                        </div>

                        <div class="mb-3">
                            <div class="fw-semibold">Email</div>
                            <div class="text-muted">
                                contact@gategourmet.com
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="fw-semibold">Phone</div>
                            <div class="text-muted">
                                +45 11 22 33 44
                            </div>
                        </div>

                        <div class="alert alert-info mb-0">
                            Support is available on weekdays during production hours.
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
