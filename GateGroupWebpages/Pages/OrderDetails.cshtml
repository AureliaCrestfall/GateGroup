@page "{orderId:int}"
@using gategourmetLibrary.Models
@using gategourmetLibary.Models
@model GateGroupWebpages.Pages.OrderDetailsModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">

    <!-- header -->
    <div class="mb-4">
        <h2 class="mb-1" style="font-family:'Playfair Display', serif;">
            Order Details #@Model.Order.ID
        </h2>
        <p class="text-muted mb-0">
            Detailed overview of the selected order.
        </p>
    </div>

    <!-- order info card -->
    <div class="card bg-dark text-light shadow-sm border-0 mb-4">
        <div class="card-body">

            <div class="row mb-2">
                <div class="col-md-6">
                    <p><strong>Status:</strong> @Model.Order.Status</p>
                    <p><strong>Date:</strong> @Model.Order.OrderMade.ToShortDateString()</p>
                    <p><strong>Time:</strong> @Model.Order.OrderMade.ToShortTimeString()</p>
                </div>

                <div class="col-md-6">
                    <p><strong>Ready by:</strong> @Model.Order.OrderDoneBy.ToShortDateString()</p>
                    <p>
                        <strong>Payment status:</strong>
                        @(Model.Order.paystatus ? "Paid" : "Not paid")
                    </p>
                </div>
            </div>

        </div>
    </div>

    <!-- recipe parts -->
    <h4 class="mb-3">Recipe Parts</h4>

    @if (Model.RecipeParts != null && Model.RecipeParts.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-dark table-borderless align-middle">
                <thead class="border-bottom border-secondary">
                    <tr>
                        <th>Part name</th>
                        <th>How to prepare</th>
                        <th>Ingredients</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RecipePartDetails part in Model.RecipeParts)
                    {
                        <tr>
                            <td>@part.Name</td>
                            <td>@part.HowToPrep</td>
                            <td>
                                @if (part.Ingredients != null && part.Ingredients.Count > 0)
                                {
                                    <ul class="mb-0">
                                        @foreach (string ingredient in part.Ingredients)
                                        {
                                            <li>@ingredient</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">No ingredients</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">
            No recipe parts found for this order.
        </p>
    }

    <!-- actions -->
    <div class="mt-4 d-flex gap-2">

        <!-- delete  -->
        <form method="post"
              asp-page-handler="Delete"
              asp-route-orderId="@Model.Order.ID"
              onsubmit="return confirm('Are you sure you want to delete this order?');">
            <button type="submit"
                    class="btn btn-outline-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>

        <!-- back navigation -->
        <a asp-page="/Dashboard"
           class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Back to dashboard
        </a>

    </div>

</div>
