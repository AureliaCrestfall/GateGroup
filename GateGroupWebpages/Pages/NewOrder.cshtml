@page
@model GateGroupWebpages.Pages.NewOrderModel
@{
    ViewData["Title"] = "New Order";
    DateTime minReadyDate = DateTime.Today.AddDays(7);
}

<div class="container-sm my-4">

    <div class="text-center mb-4">
        <h2 class="mb-1" style="font-family:'Playfair Display', serif;">Create New Order</h2>
        <p class="text-muted mb-0">
            Choose a ready date, then add up to 5 recipe parts (you can leave unused parts empty).
        </p>
    </div>

    <!-- shows model validation errors -->
    <div asp-validation-summary="All" class="text-warning mb-3"></div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning d-flex align-items-start gap-2 mb-4" role="alert">
            <div class="fw-bold">Info:</div>
            <div>@Model.ErrorMessage</div>
        </div>
    }

    <div class="card shadow-sm bg-dark text-light border-0">
        <div class="card-body">

            <form method="post">

                <!-- order info -->
                <h5 class="mb-3">Order information</h5>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="NewOrder.OrderDoneBy" class="form-label">Ready by</label>

                        <input asp-for="NewOrder.OrderDoneBy"
                               type="date"
                               class="form-control"
                               min="@minReadyDate.ToString("yyyy-MM-dd")"
                               required />

                        <span asp-validation-for="NewOrder.OrderDoneBy" class="text-warning small"></span>

                        <div class="form-text text-secondary">
                            Must be at least 7 days after today.
                        </div>
                    </div>

                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check mt-4 mt-md-0">
                            <input asp-for="NewOrder.paystatus"
                                   class="form-check-input"
                                   id="PayStatus" />
                            <label class="form-check-label" for="PayStatus">
                                Order has been paid
                            </label>
                        </div>
                    </div>
                </div>

                <hr class="border-secondary my-4" />

                <!-- recipe parts -->
                <div class="d-flex justify-content-between align-items-end flex-wrap gap-2 mb-2">
                    <div>
                        <h5 class="mb-1">Recipe parts</h5>
                        <p class="text-secondary mb-0">
                            Tip: Only parts with an ingredient selected will be saved.
                        </p>
                    </div>
                    <span class="badge bg-secondary">Up to 5 parts</span>
                </div>

                
                <!-- buttons -->
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-end">
                    <a class="btn btn-outline-light" asp-page="/Dashboard">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit order</button>
                </div>

            </form>
        </div>
    </div>
</div>
